@model PresentationLayer.Models.FilmViewModelEdit 


<form enctype="multipart/form-data" asp-controller="film" asp-action="editfilm" method="post"
      class="mt-3">
     
    <input type="hidden" asp-for="Id">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" placeholder="Description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="YearManufacture" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="YearManufacture" class="form-control" placeholder="YearManufacture">
            <span asp-validation-for="YearManufacture" class="text-danger"></span>
        </div>
    </div> 

    <div class="form-group row">
        <label asp-for="Poster" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input type="file" asp-for="Poster" class="form-control custom-file-input">
                <label class="custom-file-label">Choose File...</label>
            </div>
        </div>
    </div>


    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </div> 

    @section Scripts {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }
</form>